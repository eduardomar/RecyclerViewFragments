<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".activity.DetalleContacto">

    <TextView
        android:id="@+id/tvNameContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblNameContact"
        android:textSize="@dimen/lblNameContact"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:onClick="call"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            />

        <TextView
            android:id="@+id/tvPhoneContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblPhoneContact"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/lblPhoneContact"
            android:layout_marginLeft="@dimen/left"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:onClick="sendEmail"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_secured_letter"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tvEmailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblEmailContact"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/lblEmailContact"
            android:layout_marginLeft="@dimen/left"
            />
    </LinearLayout>
</LinearLayout>